<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Myrate</th>
      <th>Country</th>
      <th>Hoppys</th>
      <th>Languages</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.myrate %></td>
        <td><%= profile.country %></td>
        <td><%= profile.hoppys %></td>
        <td><%= profile.languages %></td>
        <td><%= profile.age %></td>
        <td><%= profile.gender %></td>
        <td><%= image_tag avatar_url(current_user) %></td>
        <td><%= link_to 'Show', profile , :class => "btn btn-md btn-primary btn-block" %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) , :class => "btn btn-md btn-primary btn-block" %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-md btn-primary btn-block"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path , :class => "btn btn-md btn-primary btn-block" %>
