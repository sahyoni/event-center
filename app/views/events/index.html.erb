<h1>Listing Events</h1>

<table>
<div class="container">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Max attends</th>
      <th>Max age</th>
      <th>Min age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.max_attends %></td>
        <td><%= event.max_age %></td>
        <td><%= event.min_age %></td>
        <td><%= link_to 'Show', event , :class => "btn btn-md btn-primary btn-block" %></td>
        <td><%= link_to 'Edit', edit_event_path(event) , :class => "btn btn-md btn-primary btn-block" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-md btn-primary btn-block" %></td>
      </tr>
    <% end %>
  </tbody>
  </div>
</table>

